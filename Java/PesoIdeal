/*
 * Fazer um rpograma em Java que receba como entrada a altura e o sexo de uma
 * pessoa (letra 'F' para Feminino e letra 'M' para Masculino). Em seguida,
 * calcule e escreva o peso ideal dessa pessoa, utilizando as seguintes fómulas:
 * 
 * para mulheres: (62,1 * altura) - 44,7;
 * para homens: (72,7 * altura) - 58
 */
package exercicios;

import java.util.Scanner;

/**
 *
 * @author thiag
 */
public class PesoIdeal {
    public static void main(String[] args) {
        float altura;
        char sexo;
        
        Scanner entrada = new Scanner(System.in);
        
        System.out.print("Digita a altura: ");
        altura = entrada.nextFloat();
        System.out.print("Digite o sexo: ");
        sexo = entrada.next().charAt(0);
        
        if(sexo=='M' || sexo=='m')
            System.out.println(String.format("Peso ideal para homens: %.2f", (72.7 * altura) - 58));
        else if(sexo=='F' || sexo=='f')
            System.out.println(String.format("Peso ideal para mulheres: %.2f", (62.1 * altura) - 44,7));
        else
            System.out.println("Sexo inválido!");
    }
}

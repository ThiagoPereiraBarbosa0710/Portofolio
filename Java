/*
 * Desenvolver uma classe EntradaDados que deverá receber como entrada os
 * dados de um produto: o código, a descrição´, o preço e a quantidade.
 * Ao final mostrar esses dados na tela. essa classe deverá conter a 
 * função main
*/

package entradaDados;
import javax.swing.JOptionPane;

public class EntradaDados {
    public static void main(String[] args) {
        // Declaração das variáveis
        int codigo, quantidade;
        String descricao;
        double preco, total;
        
        // Entrada de dados
        codigo = Integer.parseInt(JOptionPane.showInputDialog("Digite o codigo: "));
        descricao = JOptionPane.showInputDialog("Digite a descricao: ");
        quantidade = Integer.parseInt(JOptionPane.showInputDialog("Digite a quantidade: "));
        preco = Double.parseDouble(JOptionPane.showInputDialog("Digite o preco: "));
        
        // Processamento
        total = preco * quantidade;
        
        // Saída
        JOptionPane.showMessageDialog(null, "Codigo: "+codigo+
                "\nDescricao: "+descricao+
                "\nQuantidade: "+quantidade+
                "\nPreco: "+String.format("R$ %.2f", preco)+
                "\nPreco total: "+String.format("R$ %.2f", total));
    }
}
